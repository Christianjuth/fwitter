<div class="row">

  <div class="col-xs-12 col-sm-8">
    <div class="list-group">
      <% @all_tweets.each do |tweet| %>
        <div class="twitter-syntax list-group-item">
          <p class="twitter-text list-group-item-text">
            @<%= tweet.user.username %> - <%= tweet.msg %>
          </p>
          <div class="twitter-content"></div>
        </div>
      <% end %>
    </div>
  </div>


  <div class="col-xs-12 col-sm-4">
    <div class="panel panel-default">
      <div class="panel-body">

        <form id="tweet-form" action="/new_tweet" method="POST">
          <div class="form-group">
            <textarea rows="4" type="text" name="msg" class="form-control" id="msg" placeholder="140 characters or less..."></textarea>
          </div>
          <button type="submit" class="btn btn-default btn-block pull-right">Submit</button>
        </form>

      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">
        <p>Built with <span class="text-danger">&#10084;</span> and Ruby by Christian Juth at the Flatiron School. This project is projected by the MIT licence and is opensource.</p>
      </div>
    </div>
  </div>

</div>